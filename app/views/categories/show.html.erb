<div class="jumbotron">
  <h1><%= @category.name %></h1>
</div>

<div class="row">

  <div class="col-sm-3">
    <div class="panel panel-default" id="cart">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t 'categories.categories' %></h3>
      </div>
      <div class="panel-body">
        <ul>
          <% Category.all.each do |category| %>
              <li><%= link_to category.name, category %></a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="row">
      <div class="col-sm-12 products-pagination">
        <%= will_paginate @products %>
      </div>
    </div>

    <div class="row">
      <% @products.each do |product| %>

          <div class="col-sm-6 product-item">
            <div class="panel panel-default">
              <div class="panel-body">
                <h3><%= product.send("title_" + "#{I18n.locale}") %></h3>
                <div class="img" style="background-image: url('<%= product.image_url(:thumb)%>');"></div>
                <h4>$<%= product.price %></h4>
                <p>
                  <%= link_to (t 'index.view'), product,  class:"btn btn-default" %>
                  <button class="btn btn-primary"><%= t 'index.add' %></button>
                </p>
              </div>
            </div>
          </div>

      <% end %>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <%= will_paginate @products %>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="panel panel-default" id="cart">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t 'index.cart' %></h3>
      </div>
      <div class="panel-body">
        <%= t 'index.cart_info' %>
      </div>
    </div>
  </div>
</div>
