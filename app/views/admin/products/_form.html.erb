<%= form_for [:admin, @product], html: {class: 'form-horizontal'} do |f| %>

    <div class="form-group <%= 'has-error' if @product.errors[:title_en].any? %>">
      <%= f.label :title_en, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :title_en, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @product, field_name: :title_en %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @product.errors[:title_ru].any? %>">
      <%= f.label :title_ru, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :title_ru, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @product, field_name: :title_ru %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @product.errors[:description].any? %>">
      <%= f.label :description, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :description, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @product, field_name: :description %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @product.errors[:price].any? %>">
      <%= f.label :price, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :price, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @product, field_name: :price %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @product.errors[:category_id].any? %>">
      <%= f.label :category_id, 'Category', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.collection_select :category_id, Category.all, :id, :name, {}, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @product, field_name: :category_id %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @product.errors[:image].any? %>">
      <%= f.label :image, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :image %>
        <%= render 'shared/field_errors', object: @product, field_name: :image %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>