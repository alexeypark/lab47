<div class="row">
  <div class="col-sm-12">
    <h1><%= t 'products.products' %> <%= link_to (t 'products.new_product'), new_admin_product_path, class: 'btn btn-success' %></h1>
  </div>
</div>

<hr />

<table class="table table-striped">
  <tr>
    <th><%= t 'products.image' %></th>
    <th><%= t 'products.title' %></th>
    <th><%= t 'products.description' %></th>
    <th><%= t 'prices.price' %></th>
    <th><%= t 'categories.category' %></th>
    <th><%= t 'actions.actions' %></th>
  </tr>

  <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image_url(:thumb)%></td>
        <td><%= product.send("title_" + "#{I18n.locale}") %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.category.name %></td>
        <td>
          <%= link_to (t 'actions.view'), admin_product_path(product) %>
          <%= link_to (t 'actions.edit'), edit_admin_product_path(product) %>
          <%= link_to (t 'actions.delete'), admin_product_path(product),
                      method: :delete,
                      data: {confirm: 'Do you want to remove this product?'} %>
        </td>
      </tr>
  <% end %>

</table>
