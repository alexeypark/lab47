<div class="row">
  <div class="col-sm-12">
    <h1><%= t 'categories.new_category' %></h1>
  </div>
</div>

<hr />

<%= form_for [:admin, @category], html: {class: 'form-horizontal'} do |f| %>

    <div class="form-group <%= 'has-error' if @category.errors[:name].any? %>">
      <%= f.label (t 'categories.name'), class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @category, field_name: :name %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit (t 'categories.new_category'), class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>
