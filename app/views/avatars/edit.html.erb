<%= form_for @user, url: {action: "update"}, html: { multipart: true } do |f| %>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group text-center">
          <h4>Change your Avatar:</h4>
          <%= f.file_field :avatar, required: true %>
        </div>
      </div>
    </div>
    <div class="form-group text-center">
      <%= f.submit "Update Avatar", class: 'btn btn-success' %>
    </div>
<% end %>